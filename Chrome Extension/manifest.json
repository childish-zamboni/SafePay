{
  "name": "SafePay Chrome Extension",
  "version": "1.0",
  "description": "Decentralized storage system for payment info",
  "permissions": ["activeTab","declarativeContent","storage"],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "page_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/logo.png",
      "32": "images/logo.png",
      "48": "images/logo.png",
      "128": "images/logo.png"
    }
  },
  "icons": {
    "16": "images/logo.png",
    "32": "images/logo.png",
    "48": "images/logo.png",
    "128": "images/logo.png"
  },
  "options_page": "options.html",
  "manifest_version": 2
}
